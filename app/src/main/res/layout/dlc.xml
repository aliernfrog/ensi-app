<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dlc_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#454545"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/dlc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DLC"
            android:textColor="#77FF00"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dlc_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Words here"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dlc_split"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="==========="
            android:textColor="#888888" />

        <TextView
            android:id="@+id/dlc_verbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verbs here"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dlc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DLC ID"
            android:textColor="#888888" />

    </LinearLayout>
</LinearLayout>