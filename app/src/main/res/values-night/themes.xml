<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ensi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customization -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundDark</item>
        <item name="android:navigationBarColor" tools:targetApi="23">@color/backgroundDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:colorEdgeEffect" tools:targetApi="l">@color/white</item>
        <item name="colorControlActivated">@color/blueDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <!-- LAC Tool -->
        <item name="ensicord_background">@color/backgroundDark</item>
        <item name="ensicord_hint">@color/hintDark</item>
        <item name="ensicord_textOnRed">@color/textOnRedDark</item>
        <item name="ensicord_hintOnRed">@color/hintOnRedDark</item>
        <item name="ensicord_linear">@color/linearDark</item>
        <item name="ensicord_button">@color/buttonDark</item>
        <item name="ensicord_blue">@color/blueDark</item>
        <item name="ensicord_red">@color/redDark</item>
    </style>
</resources>