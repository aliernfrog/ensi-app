<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ensi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customization -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundLight</item>
        <item name="android:navigationBarColor" tools:targetApi="23">@color/backgroundLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:colorEdgeEffect" tools:targetApi="l">@color/black</item>
        <item name="colorControlActivated">@color/blueLight</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <!-- Ensicord -->
        <item name="ensicord_background">@color/backgroundLight</item>
        <item name="ensicord_hint">@color/hintLight</item>
        <item name="ensicord_textOnRed">@color/textOnRedLight</item>
        <item name="ensicord_hintOnRed">@color/hintOnRedLight</item>
        <item name="ensicord_linear">@color/linearLight</item>
        <item name="ensicord_button">@color/buttonLight</item>
        <item name="ensicord_blue">@color/blueLight</item>
        <item name="ensicord_red">@color/redLight</item>
    </style>
</resources>